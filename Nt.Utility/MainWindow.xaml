    <Window.Resources>
        <ContextMenu x:Key="openTableContextMenu">
            <MenuItem Header="Umbelegen" Click="OpenTable_MenuItem_merge_Click"/>
            <MenuItem Header="Tisch Löschen" Click="OpenTable_MenuItem_kill_Click"/>
        </ContextMenu>
    </Window.Resources>
    -->
</Window>

